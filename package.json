{
  "name": "ghastly",
  "version": "0.1.4",
  "description": "A lightweight, pluggable library that helps to modularize applications built with Discord.js.",
  "keywords": [
    "discord.js",
    "library",
    "plugin",
    "bot"
  ],
  "homepage": "https://github.com/hkwu/ghastly#readme",
  "bugs": {
    "url": "https://github.com/hkwu/ghastly/issues"
  },
  "license": "MIT",
  "author": "Kelvin Wu <kelvinwu1996@gmail.com>",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hkwu/ghastly.git"
  },
  "scripts": {
    "build": "babel src --out-dir lib",
    "watch": "babel --watch src --out-dir lib",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "mocha --require babel-register --recursive",
    "prepublish": "yarn run build && yarn test",
    "docs:prepare": "gitbook install",
    "docs:watch": "yarn run docs:prepare && gitbook serve",
    "docs:build": "yarn run docs:prepare && rm -rf _book && gitbook build",
    "docs:publish": "yarn run docs:build && cd _book && echo 'ghastly.js.org' > CNAME && git init && git commit --allow-empty -m 'Update docs.' && git checkout -b gh-pages && git add . && git commit -am 'Update docs.' && git push git@github.com:hkwu/ghastly gh-pages --force"
  },
  "dependencies": {
    "es6-error": "^4.0.0",
    "lodash": "^4.15.0",
    "string-argv": "0.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-plugin-transform-es2015-destructuring": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-preset-node7": "^1.2.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "chai-subset": "^1.3.0",
    "eslint": "^3.1.1",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-import": "^2.2.0",
    "gitbook-cli": "^2.3.0",
    "mocha": "^3.0.2"
  },
  "peerDependencies": {
    "discord.js": "^10.0.1"
  }
}
